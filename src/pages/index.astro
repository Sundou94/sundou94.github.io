---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// 모든 포스트를 가져와서 날짜순 정렬
const allPosts = await getCollection('posts');
const sortedPosts = allPosts.sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

// Featured 포스트와 최신 포스트
const featuredPosts = sortedPosts.filter((post) => post.data.featured).slice(0, 3);
const latestPosts = sortedPosts.slice(0, 6);

const categoryLabels: Record<string, string> = {
  'urban-observation': '도시 관찰',
  'photography': '사진',
  'tools': '도구',
  'data': '데이터',
};
---

<BaseLayout title="Digital Doppler - 도시를 관찰하고 기록하는 블로그">
  <section class="hero">
    <div class="container">
      <h1>Digital Doppler</h1>
      <p>도시를 관찰하고 기록하는 블로그</p>
    </div>
  </section>

  {
    featuredPosts.length > 0 && (
      <section class="featured">
        <div class="container">
          <h2>Featured Posts</h2>
          <div class="featured-grid">
            {featuredPosts.map((post) => (
              <article class="featured-card">
                <a href={`/posts/${post.slug}`}>
                  {post.data.coverImage && (
                    <img
                      src={post.data.coverImage}
                      alt={post.data.title}
                      loading="lazy"
                    />
                  )}
                  <div class="card-content">
                    <span class="category">
                      {categoryLabels[post.data.category] || post.data.category}
                    </span>
                    <h3>{post.data.title}</h3>
                    <p>{post.data.excerpt}</p>
                    <time>
                      {post.data.publishDate.toLocaleDateString('ko-KR', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                      })}
                    </time>
                  </div>
                </a>
              </article>
            ))}
          </div>
        </div>
      </section>
    )
  }

  <section class="latest">
    <div class="container">
      <div class="section-header">
        <h2>Latest Posts</h2>
        <a href="/posts" class="view-all">모든 글 보기 →</a>
      </div>
      <div class="posts-grid">
        {
          latestPosts.map((post) => (
            <article class="post-card">
              <a href={`/posts/${post.slug}`}>
                {post.data.coverImage && (
                  <div class="card-image">
                    <img
                      src={post.data.coverImage}
                      alt={post.data.title}
                      loading="lazy"
                    />
                  </div>
                )}
                <div class="card-content">
                  <div class="meta">
                    <span class="category">
                      {categoryLabels[post.data.category] || post.data.category}
                    </span>
                    <time>
                      {post.data.publishDate.toLocaleDateString('ko-KR', {
                        month: 'short',
                        day: 'numeric',
                      })}
                    </time>
                  </div>
                  <h3>{post.data.title}</h3>
                  <p>{post.data.excerpt}</p>
                </div>
              </a>
            </article>
          ))
        }
      </div>
    </div>
  </section>

  <style>
    .container {
      max-width: var(--max-width);
      margin: 0 auto;
      padding: 0 var(--space-lg);
    }

    .hero {
      padding: var(--space-3xl) 0;
      text-align: center;
      border-bottom: 1px solid var(--color-border);
    }

    .hero h1 {
      font-size: 3rem;
      margin-bottom: var(--space-md);
      background: linear-gradient(135deg, var(--color-accent) 0%, #00a8ff 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .hero p {
      font-size: 1.25rem;
      color: var(--color-text-muted);
    }

    .featured {
      padding: var(--space-3xl) 0;
    }

    .featured h2 {
      margin-bottom: var(--space-2xl);
      font-size: 2rem;
    }

    .featured-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: var(--space-xl);
    }

    .featured-card {
      border-radius: var(--radius-lg);
      overflow: hidden;
      border: 1px solid var(--color-border);
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .featured-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    .featured-card a {
      display: block;
      color: inherit;
    }

    .featured-card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }

    .featured-card .card-content {
      padding: var(--space-lg);
    }

    .featured-card .category {
      display: inline-block;
      background: var(--color-accent);
      color: white;
      padding: var(--space-xs) var(--space-sm);
      border-radius: var(--radius-sm);
      font-size: 0.75rem;
      font-weight: 500;
      margin-bottom: var(--space-sm);
    }

    .featured-card h3 {
      margin-bottom: var(--space-sm);
      font-size: 1.25rem;
    }

    .featured-card p {
      color: var(--color-text-muted);
      margin-bottom: var(--space-md);
      line-height: 1.5;
    }

    .featured-card time {
      font-size: 0.875rem;
      color: var(--color-text-muted);
    }

    .latest {
      padding: var(--space-3xl) 0;
      background: #fafafa;
    }

    .section-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: var(--space-2xl);
    }

    .section-header h2 {
      margin: 0;
      font-size: 2rem;
    }

    .view-all {
      font-weight: 500;
      color: var(--color-accent);
    }

    .posts-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: var(--space-xl);
    }

    .post-card {
      background: white;
      border-radius: var(--radius-md);
      overflow: hidden;
      transition: transform 0.2s ease;
    }

    .post-card:hover {
      transform: translateY(-2px);
    }

    .post-card a {
      display: block;
      color: inherit;
    }

    .card-image {
      width: 100%;
      height: 180px;
      overflow: hidden;
      background: #f5f5f5;
    }

    .card-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease;
    }

    .post-card:hover .card-image img {
      transform: scale(1.05);
    }

    .post-card .card-content {
      padding: var(--space-lg);
    }

    .post-card .meta {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: var(--space-sm);
      font-size: 0.75rem;
    }

    .post-card .category {
      background: #f5f5f5;
      color: var(--color-text-muted);
      padding: var(--space-xs) var(--space-sm);
      border-radius: var(--radius-sm);
      font-weight: 500;
    }

    .post-card time {
      color: var(--color-text-muted);
    }

    .post-card h3 {
      margin-bottom: var(--space-sm);
      font-size: 1.125rem;
      line-height: 1.4;
    }

    .post-card p {
      color: var(--color-text-muted);
      font-size: 0.875rem;
      line-height: 1.5;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    @media (max-width: 768px) {
      .hero h1 {
        font-size: 2rem;
      }

      .hero p {
        font-size: 1rem;
      }

      .featured-grid,
      .posts-grid {
        grid-template-columns: 1fr;
      }

      .section-header {
        flex-direction: column;
        align-items: flex-start;
        gap: var(--space-md);
      }
    }
  </style>
</BaseLayout>
